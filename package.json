{
  "private": true,
  "name": "lumirlumir-configs",
  "type": "module",
  "packageManager": "npm@10.9.2",
  "engines": {
    "node": ">=20.19.4"
  },
  "scripts": {
    "prepare": "npm run sync-client && husky",
    "build": "node src -d",
    "fix": "npm-run-all -c -l -p fix:*",
    "fix:eslint": "npx eslint --fix",
    "fix:prettier": "npx prettier . --write --ignore-unknown",
    "fix:markdownlint": "npx markdownlint **/*.md --fix",
    "lint": "npm-run-all -c -l -p lint:*",
    "lint:eslint": "npx eslint",
    "lint:prettier": "npx prettier . --check --ignore-unknown",
    "lint:editorconfig": "npx editorconfig-checker",
    "lint:markdownlint": "npx markdownlint **/*.md",
    "sync-client": "bash sync-client.sh"
  },
  "dependencies": {
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "editorconfig-checker": "^6.1.1",
    "eslint": "^9.39.2",
    "eslint-config-bananass": "^0.5.2",
    "eslint-markdown": "^0.1.0-canary.12",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.7.4"
  }
}
